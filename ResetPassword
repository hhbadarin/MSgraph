#Change Password for a group of users in csv (One column titles: NewPassword)

#Specify the path of the CSV file
$CSVFilePath = "$Home\Desktop\changepassword.csv"

#Import 
$Users = Import-Csv -Path $CSVFilePath

#Loop
foreach ($User in $Users){ 
	$params = @{
		passwordProfile = @{
			forceChangePasswordNextSignIn = $false
			password = $User.NewPassword
		}
	}
	Update-MgUser -UserId $User.UserPrincipalName -BodyParameter $params
	Write-Host ("Successfully changed password for {0} to {1}" -f $User.UserPrincipalName,$User.NewPassword) -ForegroundColor Green
}
